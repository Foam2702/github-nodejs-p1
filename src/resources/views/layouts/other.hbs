<script>
     let strTemplate = "";
        let ans = 0;
        const x = parseFloat(req.body.x);
        const y = parseFLoat(req.body.y);
        switch (req.body.op) {
            case '+':
                ans = x + y;
                break;
            case '-':
                ans = x - y;
                break;
            case 'X':
                ans = x * y;
                break;
            case ':':
                ans = x / y;
                break;
        }
        res.send(strTemplate.replace('{{answer}}', ans))
</script>